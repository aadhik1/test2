pipeline {
    agent  any
    environment{
        MY_DIR = 'subdir'
    }
    stages {
        stage('Clone app repo') {
            steps {
                
                echo "${BUILD_URL}"
                
            }
        }
        stage('Clone Middleware repo') {
            steps {
                sh '[ -d \'subdir\' ] && rm -rf subdir'
                sh 'mkdir  subdir'
                dir ('subdir'){
                git 'https://github.com/aadhik1/test3.git'}
            }
        }
        
     }
}
